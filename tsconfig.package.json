{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2015",
		"sourceMap": true,
		"inlineSources": true,
		"baseUrl": ".",
		"incremental": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true
	}
}
